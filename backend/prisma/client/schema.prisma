generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  login     String
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}

model Puzzle {
  id               String  @id @default(uuid())
  fen              String  @db.VarChar(72)
  moves            String  @db.VarChar(101)
  rating           Int
  ratingDeviation  Int
  popularity       Int
  nbPlays          Int
  themes           String? @db.VarChar(100)
  gameUrl          String? @db.VarChar(38)
  openingFamily    String? @db.VarChar(31)
  openingVariation String? @db.VarChar(53)

  @@map("puzzles")
}
